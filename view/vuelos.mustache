<div class="d-flex justify-content-center d-flex flex-row mt-0 pt-3 botones">
    <div class="row justify-content-center align-items-center" >
        <div class="col-auto bg-light p-5 mb-5 rounded-3 shadow-lg">
            {{#error}}
  
            <div class= "alert alert-danger" role="alert">
        
              Viaje no encontrado!
        
            </div>
            
          {{/error}}
          {{#vacio}}
  
            <div  class= "alert alert-danger" role="alert">
        
              Por Favor llene El de busqueda!!!
        
            </div>
            
          {{/vacio}}

            <div class="row">
                <div class="col-md-12 py-3">
                    <form class="d-flex col" action="/Buscador/buscar" method="GET">
                        <input type="text"  class="form-control" name="buscar" placeholder="Buscar Viaje">
                        <button type="submit" class="btn btn-primary" >Buscar</button>
                    </form>
                </div>
            </div>

            <table class="table text-center" style="width: 877px">
                <thead>
                <tr>
                    <th scope="col">LUGAR PARTIDA</th>
                    <th scope="col">FECHA PARTIDA</th>
                    <th scope="col">PRECIO</th>
                    <th scope="col">TRAYECTO</th>
                    <th scope="col">EQUIPO</th>
                    
                </tr>
                </thead>

                <tbody>

                
                    <form action="" method="post">
                        {{#viajes}}
                        <tr>
                            
                            <td>{{lugar_partida}}</td>
                            <td>{{fecha_Partida}}</td>
                            <td>{{precio}}</td>
                            <td>{{trayecto}}</td>
                            <td>{{equipo}}</td>
                           
                            
                            
                            <td>
                                <input type="submit" class="btn btn-primary" value="Reservar">
                                
                        </tr>
                        {{/viajes}}
                    </form>
                
                </tbody>
            </table>
        </div>
    </div>
</div>
