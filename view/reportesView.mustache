<section class ="container">
    <article class>
        <h1 class>CABINA MAS VENDIDA</h1>
        <div id = "grafic" style="width: 700px; height: 500px;"></div>
    </article>
    
</section>

<script>

    google.charts.load('current', {'packages':['corechart']});
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {

        var data = google.visualization.arrayToDataTable([
            ['cabina', 'cantidad'],
            {{#grafico}}
                ['{{Cabina}}',     parseInt('{{Cantidad}}')],
            {{/grafico}}
        ]);

        var options = {
            title: 'Cabina más vendida'
        };

        var chart = new google.visualization.PieChart(document.getElementById('grafic'));

        chart.draw(data, options);
    }
</script>
