{{>header}}
{{>menu}}



{{^reserves}}
    <main class="container">

        <h2 class="mt-2">No hay reservas a su nombre</h2>
    </main>
{{/reserves}}

{{#existsReserves}}
    <main class="container">
        <h2 class="mt-2">Las reservas que estan asociadas a usted son las siguientes:</h2>

        <ul class="list-group">
            {{#reserves}}
                <li class="list-group-item">
                    <div class="p-2">
                        <p>Codigo de abordaje: {{codigo}}</p>
                        <p class="mb-1">Precio total pagado: {{precio}}</p>
                        <div class="d-flex gap-2 mt-4">
                            <a class="btn btn-success" href="/Checkin&id_Reserva={{id}}" value="Check-in">Ver Reserva</a>
                            <form method="POST" action="/reservator/cancelarReserva">
                                <input type="hidden" name="reserva" value={{id}}>
                                <button type="submit" class="btn btn-danger" value="Check-in">Cancelar Reserva</button>
                            </form>
                        </div>
                    </div>
                </li>
            {{/reserves}}
        </ul>

    </main>

    {{>footer}}

{{/existsReserves}}